= form_with model: todo_item,
  url: todo_list_todo_item_path(@todo_list, todo_item),
  class: "edit-form",
  html: { style: "width: 100%; padding: 0 0.25rem;" } do |f|
  .input-group
    -# TODO: extract rows calculation to helper
    = f.text_area :content,
      rows: (todo_item.content.length / 60.0).ceil,
      autofocus: true,
      class: "form-control form-control-sm"
    .input-group-append
      = f.submit "Save", class: "btn btn-sm btn-outline-info"
